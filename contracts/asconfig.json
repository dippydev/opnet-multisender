{
    "$schema": "https://raw.githubusercontent.com/aspect-dev/asconfig/main/asconfig.schema.json",
    "targets": {
        "multisender": {
            "outFile": "build/MultiSender.wasm",
            "textFile": "build/MultiSender.wat"
        },
        "bob-multisender": {
            "outFile": "build/BobMultiSender.wasm",
            "textFile": "build/BobMultiSender.wat"
        }
    },
    "options": {
        "transform": "@btc-vision/opnet-transform",
        "sourceMap": false,
        "optimizeLevel": 3,
        "shrinkLevel": 1,
        "converge": true,
        "noAssert": false,
        "enable": [
            "sign-extension",
            "mutable-globals",
            "nontrapping-f2i",
            "bulk-memory",
            "simd",
            "reference-types",
            "multi-value"
        ],
        "runtime": "stub",
        "memoryBase": 0,
        "initialMemory": 1,
        "exportStart": "start",
        "use": []
    }
}
